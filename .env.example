# Database Configuration
# If your values contain '#', wrap them in single quotes.
# If your values contain '$', use '$$' to escape them for Docker Compose.
# Example: DB_PASSWORD='my#password$$123' (results in my#password$123)
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_NAME=localllm
DB_PORT=5432

# Application Configuration
# SESSION_SECRET must be at least 32 characters long.
# If it contains '#', wrap it in single quotes (e.g., SESSION_SECRET='abc#123').
SESSION_SECRET=a-very-long-and-secure-session-secret-at-least-32-chars
PORT=3000
# Whether or not to trust the reverse proxy (e.g. for rate limiting and secure cookies)
TRUST_PROXY=false

# Set to a username to make them the admin.
ADMIN_USERNAME=admin
# Optional: Set an initial password for the admin user. If not set, a random one will be generated.
# ADMIN_PASSWORD=secure-password-here

# Auto-Update System
# Whether or not to use the automatic update system. (Default = true)
AUTO_UPDATE=true
# In seconds, the interval between checking updates. (Default = 600)
AUTO_UPDATE_INTERVAL=600
# Whether or not to show changelogs (restricted to admin if false)
AUTO_UPDATE_SHOW_CHANGELOGS=true
# In seconds, how long before running git pull after an update was detected. (Default = 60)
AUTO_UPDATE_WAIT=60
